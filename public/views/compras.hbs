  {{>aside}}

  <div class="content-wrapper">
      <div class="content-header">
        <div class="container-fluid">
          <div class="row mb-2">
            <div class="col-sm-6">
              <h1 class="m-0">Compras</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
              <ol class="breadcrumb float-sm-right">
                <li class="breadcrumb-item"><a href="/">Inicio</a></li>
                <li class="breadcrumb-item active">Compras</li>
              </ol>
            </div><!-- /.col -->
          </div><!-- /.row -->
        </div><!-- /.container-fluid -->
      </div>

      <section class="content">
          <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-header">
                <h3 class="card-title">Registro de compras</h3>
              </div>
              <div class="row"></div>
                <div class="col-lg-12">
                <a class="btn btn-success boton-registro" href="/nuevaCompra">
                  Agregar nueva compra</a>
              </div>
              <!-- /.card-header -->
              <div class="card-body"  >
                
                <table id="example1"  class="table table-bordered table-striped ">
                  
                  <div class="nav-item">

                  <thead>
            
                    <tr>
                      <th>Id</th>
                      <th>Proveedor</th>
                      <th>Contacto</th>
                      <th>Factura</th>
                      <th>Fecha de compra</th>
                      <th>Fecha de registro</th>
                      <th>Valor total</th>
                      <th>Método de pago</th>
                    </tr>
                  </thead>

                  </div>

                  <tbody>
                    {{#each registroCompras}}
                    <tr>
                      <td>{{ idCompra }}</td>
                      <td>{{ proveedor }}</td>
                      <td>{{ contacto }}</td>
                      <td>{{ factura }}</td>
                      <td>{{ fechaCompra }}</td>
                      <td>{{ fechaRegistro }}</td>
                      <td>{{ valorTotal }}</td>
                      <td>{{ pago }}</td>
                    </tr>
                    <tr>
                        <th>Id</th>
                        <th>Insumo</th>
                        <th>Descripcion</th>
                        <th>Cantidad</th>
                        <th>v/u</th>
                        <th>Subtotal</th>
                        <th>IVA</th>
                        <th>Total</th>
                    </tr>
                    {{/each}}
                    {{#each registroDetalle}}


                        <tr>
                      <td>{{ idInsumo }}</td>
                      <td>{{insumo}}</td>
                      <td>{{ descripcion }}</td>
                      <td>{{ cantidad }}</td>
                      <td>{{ valUnit }}</td>
                      <td>{{ subtotal }}</td>
                      <td>{{ iva }}</td>
                      <td>{{ total }}</td>
                    
                    </tr>
                    
                    {{/each}}
                  </tbody>
                  <tfoot>

                  </tfoot>
                </table>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
          <!-- /.col -->

        </div>

        
      </div>
      

      
      <!-- /.row -->
